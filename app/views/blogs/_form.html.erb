      <%= form.text_field :title, id: :blog_title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= form.label :excerpt %></label>
    <div class="col-sm-10">
      <%= form.text_area :excerpt, id: :blog_excerpt, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= form.label :body %></label>
    <div class="col-sm-10">
      <%= form.text_area :body, id: :blog_body, class: 'form-control' %>
    </div>
  </div>

  <div class="col-sm-10 offset-sm-2 mt-4">
    <%= form.submit nil, class: 'btn btn-primary' %>
  </div>
