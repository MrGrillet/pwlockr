<div class="jumbotron">
  <div class="container">
    <h1><%= @blog.title %></h1>
    <p class="lead"><%= @blog.excerpt %></p>
  </div>
</div>

<div class="container">
  <p><%= simple_format(@blog.body) %></p>

  <hr>
  <div class="">
    <%= link_to 'All Posts', blogs_path, class: "btn btn-primary mr-2" %>
    <% if current_user && current_user.is_admin? %>
      <%= link_to 'Edit', edit_blog_path(@blog) %>
    <% end %>
  </div>
</div>

<%= render '/layouts/footer' %>
