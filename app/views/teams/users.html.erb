<h1>Add users to <%= @team.name %></h1>

<h2>Users in project</h2>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th><%= t'.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @team_users.each do |team_user| %>
      <tr>
        <td><%= team_user.email %></td>
        <td>
          <% if !team_user.is_admin? %>
            <%= link_to "Remove", user_teams_path(team_user.user_teams.find_by(team_id: @team.id), tenant_id: @team.tenant_id), :method => :delete, :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?') )}, class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>Add users to team</h2>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th><%= t'.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @other_users.each do |other_user| %>
      <tr>
        <td><%= other_user.email %></td>
        <td>
          <% if !other_user.is_admin? %>
            <%= link_to "Add User", add_user_tenant_team_path(id: @team.id, tenant_id: @team.tenant_id, user_id: other_user.id ), :method => :put, class: "btn btn-success" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Back', tenant_team_path(id: @team.id, tenant_id: @team.tenant_id) %>
