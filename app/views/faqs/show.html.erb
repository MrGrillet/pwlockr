<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1><%= @faq.title %></h1>
        <p class="lead"><%= @faq.excerpt %></p>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <p><%= simple_format(@faq.answer) %></p>

  <hr>
  <div class="">
    <%= link_to 'Back', faqs_path, class: "btn btn-primary mr-2" %>
    <% if current_user && current_user.is_admin? %>
      <%= link_to 'Edit', edit_faq_path(@faq) %>
    <% end %>
  </div>

</div>

<%= render '/layouts/footer' %>
