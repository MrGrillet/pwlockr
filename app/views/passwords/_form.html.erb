
<%= form_with(model: password, local: true) do |form| %>
  <% if password.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(password.errors.count, "error") %> prohibited this password from being saved:</p>

      <ul>
      <% password.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= form.label :name %></label>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :password_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= form.label :key %></label>
    <div class="col-sm-10">
      <%= form.text_field :key, id: :password_key, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Assign to Team</label>
    <div class="col-sm-10">
      <%= form.select(:team_id, Team.all.collect { |team| [ team.name , team.id ]}, {:include_blank => "None"}, {:class => 'custom-select'}) %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Assign to Client</label>
    <div class="col-sm-10">
      <%= form.select(:client_id, Client.all.collect { |client| [ client.name , client.id ]}, {:include_blank => "None"}, {:class => 'custom-select'}) %>
    </div>
  </div>

  <%= form.hidden_field :tenant_id, value: @tenant.id %>

  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2 mt-4">
      <%= form.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
